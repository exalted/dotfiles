#!/System/Library/Frameworks/Ruby.framework/Versions/Current/usr/bin/ruby
require 'pathname'

Dir.glob("#{__dir__}/../src/steps/*")
   .map { |file| Pathname.new(file).sub_ext '' }
   .each { |file| require_relative file }

install_homebrew
upgrade_everything
install_everything

ohai "Okey dokey... see you next time!"
puts
